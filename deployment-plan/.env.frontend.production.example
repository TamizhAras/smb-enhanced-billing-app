# ============================================================================
# PRODUCTION ENVIRONMENT VARIABLES - FRONTEND
# Copy this file to .env.production and fill in your values
# ============================================================================

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# Your backend API URL (Render deployment)
# Update this after deploying backend
VITE_API_URL=https://smb-crm-backend.onrender.com

# API timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ============================================================================
# SUPABASE (OPTIONAL - if using Supabase Auth directly)
# ============================================================================
# Get from Supabase Dashboard → Settings → API
VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application name
VITE_APP_NAME=SMB CRM

# Application version
VITE_APP_VERSION=1.0.0

# Company name (displayed in UI)
VITE_COMPANY_NAME=Your Company Name

# Support email
VITE_SUPPORT_EMAIL=support@yourcompany.com

# ============================================================================
# ANALYTICS (OPTIONAL)
# ============================================================================
# Google Analytics
VITE_GA_TRACKING_ID=

# Mixpanel
# VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Hotjar
# VITE_HOTJAR_ID=your_hotjar_id

# ============================================================================
# PAYMENT GATEWAY (OPTIONAL)
# ============================================================================
# Razorpay
# VITE_RAZORPAY_KEY_ID=your_razorpay_key_id

# Stripe
# VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features in production
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_INVOICES=true
VITE_ENABLE_CUSTOMERS=true
VITE_ENABLE_INVENTORY=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_REPORTS=true

# ============================================================================
# CLOUDINARY (OPTIONAL - for file uploads)
# ============================================================================
# VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
# VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ============================================================================
# MAP & LOCATION (OPTIONAL)
# ============================================================================
# Google Maps API Key
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================================================
# INTERNATIONALIZATION
# ============================================================================
# Default language
VITE_DEFAULT_LANGUAGE=en

# Available languages (comma-separated)
VITE_AVAILABLE_LANGUAGES=en,hi

# Default currency
VITE_DEFAULT_CURRENCY=INR

# ============================================================================
# THEME & BRANDING
# ============================================================================
# Primary brand color
VITE_PRIMARY_COLOR=#3B82F6

# Logo URL
# VITE_LOGO_URL=https://your-cdn.com/logo.png

# Favicon URL
# VITE_FAVICON_URL=https://your-cdn.com/favicon.ico

# ============================================================================
# DEPLOYMENT INFO
# ============================================================================
# For debugging and tracking
VITE_DEPLOY_ENV=production
VITE_DEPLOY_PLATFORM=vercel
# VITE_BUILD_DATE=2024-01-15

# ============================================================================
# NOTES
# ============================================================================
# 
# 1. All variables starting with VITE_ will be exposed to the client
#    DO NOT put secrets here (like API keys, passwords, etc.)
#
# 2. After changing these values, rebuild the application:
#    npm run build
#
# 3. Vercel will automatically inject these during deployment
#    Set them in: Project Settings → Environment Variables
#
# 4. For local development, create .env.local with these values
#
# 5. Never commit .env.production to git!
#    Only commit .env.production.example
