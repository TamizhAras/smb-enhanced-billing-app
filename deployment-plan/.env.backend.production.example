# ============================================================================
# PRODUCTION ENVIRONMENT VARIABLES - BACKEND
# Copy this file to .env.production and fill in your values
# ============================================================================

# ============================================================================
# DATABASE (SUPABASE POSTGRESQL)
# ============================================================================
# Get from Supabase Dashboard → Settings → Database → Connection String (URI)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@db.xxxxx.supabase.co:5432/postgres

# Alternative: Individual connection parameters
# DB_HOST=db.xxxxx.supabase.co
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=postgres
# DB_SSL=true

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate a secure random string (minimum 32 characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# JWT expiration time (default: 7 days)
JWT_EXPIRES_IN=7d

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Server port (Render uses PORT environment variable)
PORT=3001

# Node environment
NODE_ENV=production

# API base URL (your backend URL)
API_URL=https://smb-crm-backend.onrender.com

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Frontend URL (Vercel deployment URL)
# Update this after deploying frontend
CORS_ORIGIN=https://smb-crm.vercel.app

# For multiple origins, use comma-separated list
# CORS_ORIGIN=https://smb-crm.vercel.app,https://www.yourdomain.com

# For development with production backend
# CORS_ORIGIN=http://localhost:5173,https://smb-crm.vercel.app

# ============================================================================
# SUPABASE (OPTIONAL - if using Supabase Auth)
# ============================================================================
# Get from Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# ============================================================================
# EMAIL (OPTIONAL - for invoice sending)
# ============================================================================
# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password
# SMTP_FROM=noreply@yourcompany.com

# SendGrid (Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================================================
# FILE STORAGE (OPTIONAL - Cloudinary for invoice PDFs)
# ============================================================================
# Get from Cloudinary Dashboard
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ============================================================================
# PAYMENT GATEWAY (OPTIONAL - Razorpay/Stripe)
# ============================================================================
# Razorpay
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ============================================================================
# LOGGING & MONITORING (OPTIONAL)
# ============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn

# ============================================================================
# SECURITY
# ============================================================================
# Rate limiting (requests per minute per IP)
RATE_LIMIT=100

# Session timeout (minutes)
SESSION_TIMEOUT=60

# Enable API key authentication (optional)
# API_KEY_ENABLED=false
# API_KEY=your_api_key

# ============================================================================
# FEATURES FLAGS (OPTIONAL)
# ============================================================================
# Enable/disable features
# FEATURE_EMAIL_INVOICES=false
# FEATURE_RECURRING_INVOICES=true
# FEATURE_MULTI_CURRENCY=false
# FEATURE_INVENTORY_MANAGEMENT=true

# ============================================================================
# DEPLOYMENT INFO
# ============================================================================
# For tracking and debugging
# DEPLOY_ENV=production
# DEPLOY_VERSION=1.0.0
# DEPLOY_DATE=2024-01-15
